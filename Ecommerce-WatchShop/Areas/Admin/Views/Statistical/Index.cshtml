@{
    ViewData["Title"] = "Thống kê";
}

<div class="app-content pt-3 p-md-3 p-lg-4">
    <div class="container-xl">
        <h1 class="app-page-title">Thống kê</h1>

        <!-- Nav Tabs -->
        <ul class="nav nav-tabs mb-4">
            <li class="nav-item">
                <a class="nav-link active" id="nav-revenue-tab" data-bs-toggle="tab" href="#tab-revenue" role="tab" aria-controls="tab-revenue" aria-selected="true">
                    Thống kê doanh thu
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-sales-tab" data-bs-toggle="tab" href="#tab-sales" role="tab" aria-controls="tab-sales" aria-selected="false">
                    Thống kê lượt mua
                </a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content">
            <!-- Revenue Chart and Table -->
            <div class="tab-pane fade show active" id="tab-revenue" role="tabpanel" aria-labelledby="nav-revenue-tab">
                <div class="container">
                    <!-- Row for Chart -->
                    <div class="row mb-4">

                        <div class="col-md-4">

                            <p>Lọc theo khoảng thời gian</p>

                            <form id="filterForm">

                                <label for="startDate">Từ ngày:</label>

                                <input type="date" class="form-control" id="startDate" placeholder="YYYY-MM-DD">

                                <label for="endDate">Đến ngày:</label>

                                <input type="date" class="form-control" id="endDate" placeholder="YYYY-MM-DD">

                                <button type="button" class="btn btn-warning btn-filter-date">Lọc</button>

                            </form>

                        </div>

                    </div>
                    <div class="row mb-4">
                        <div class="col-lg-12">
                            <div class="app-card app-card-chart h-100 shadow-sm">
                                <div class="app-card-body p-3">
                                    <div class="chart-container">
                                        <div id="myfirstchart" style="height: 400px;"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

