@{
    ViewData["Title"] = "Thống kê";
}
<div class="app-content pt-3 p-md-3 p-lg-4">
    <div class="container-xl">
        <h1 class="app-page-title">Thống kê</h1>

        <!-- Nav Tabs -->
        <ul class="nav nav-tabs mb-4">
            <li class="nav-item">
                <a class="nav-link active" id="nav-revenue-tab" data-bs-toggle="tab" href="#tab-revenue" role="tab" aria-controls="tab-revenue" aria-selected="true">
                    Thống kê doanh thu
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="nav-sales-tab" data-bs-toggle="tab" href="#tab-sales" role="tab" aria-controls="tab-sales" aria-selected="false">
                    Thống kê lượt mua
                </a>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content">
            <!-- Revenue Chart and Table -->
            <div class="tab-pane fade show active" id="tab-revenue" role="tabpanel" aria-labelledby="nav-revenue-tab">
                <div class="row">
                    <!-- Chart Section -->
                    <div class="col-lg-8">
                        <div class="app-card app-card-chart h-100 shadow-sm">
                            <div class="app-card-body p-3">
                                <div class="chart-container">
                                    <canvas id="chart-revenue"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Table Section -->
                    <div class="col-lg-4">
                        <div class="app-card app-card-table shadow-sm">
                            <div class="app-card-body">
                                <table class="table app-table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Tháng</th>
                                            <th>Doanh thu (VNĐ)</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Tháng 1</td>
                                            <td>500,000</td>
                                        </tr>
                                        <tr>
                                            <td>Tháng 2</td>
                                            <td>1,000,000</td>
                                        </tr>
                                        <tr>
                                            <td>Tháng 3</td>
                                            <td>1,500,000</td>
                                        </tr>
                                        <tr>
                                            <td>Tháng 4</td>
                                            <td>2,000,000</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sales Chart and Table -->
            <div class="tab-pane fade" id="tab-sales" role="tabpanel" aria-labelledby="nav-sales-tab">
                <div class="row">
                    <!-- Chart Section -->
                    <div class="col-lg-8">
                        <div class="app-card app-card-chart h-100 shadow-sm">
                            <div class="app-card-body p-3">
                                <div class="chart-container">
                                    <canvas id="chart-sales"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Table Section -->
                    <div class="col-lg-4">
                        <div class="app-card app-card-table shadow-sm">
                            <div class="app-card-body">
                                <table class="table app-table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Tháng</th>
                                            <th>Lượt mua</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Tháng 1</td>
                                            <td>50</td>
                                        </tr>
                                        <tr>
                                            <td>Tháng 2</td>
                                            <td>70</td>
                                        </tr>
                                        <tr>
                                            <td>Tháng 3</td>
                                            <td>100</td>
                                        </tr>
                                        <tr>
                                            <td>Tháng 4</td>
                                            <td>150</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Doanh thu Chart
    var ctxRevenue = document.getElementById('chart-revenue').getContext('2d');
    new Chart(ctxRevenue, {
        type: 'bar',
        data: {
            labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4'],
            datasets: [{
                label: 'Doanh thu',
                data: [500, 1000, 1500, 2000],
                backgroundColor: '#4e73df',
                borderColor: '#4e73df',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top'
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

    // Lượt mua Chart
    var ctxSales = document.getElementById('chart-sales').getContext('2d');
    new Chart(ctxSales, {
        type: 'bar',
        data: {
            labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4'],
            datasets: [{
                label: 'Lượt mua',
                data: [50, 70, 100, 150],
                backgroundColor: '#1cc88a',
                borderColor: '#1cc88a',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top'
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
