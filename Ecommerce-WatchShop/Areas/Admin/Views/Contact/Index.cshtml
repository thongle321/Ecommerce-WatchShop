@model IEnumerable<Ecommerce_WatchShop.Models.Contact>

@{
	ViewData["Title"] = "Quản lý liên hệ";
}


<div class="container-xl">
	<div class="row g-3 mb-4 align-items-center justify-content-between">
		<div class="col-auto">
			<h1 class="app-page-title mb-0">Quản lý liên hệ</h1>
		</div>
		<div class="col-auto">
			<div class="page-utilities">
				<div class="row g-2 justify-content-start justify-content-md-end align-items-center">
					<div class="col-auto">
						<form class="table-search-form row gx-1 align-items-center">
							<div class="col-auto">
								<input type="text" id="search-contacts" name="searchcontacts" class="form-control search-orders" placeholder="Tìm kiếm">
							</div>
							<div class="col-auto">
								<button type="submit" class="btn app-btn-secondary">Tìm kiếm</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="tab-content" id="contacts-table-tab-content">
		<div class="tab-pane fade show active" role="tabpanel">
			<div class="app-card app-card-orders-table shadow-sm mb-5">
				<div class="app-card-body">
					<div class="table-responsive">
						<table class="table app-table-hover mb-0 text-left">
							<thead>
								<tr>
									<th class="cell">Id</th>
									<th class="cell">Họ và tên</th>
									<th class="cell">Email</th>
									<th class="cell">Tiêu đề</th>
									<th class="cell">Ghi chú</th>
									<th class="cell">Hành động</th>
								</tr>
							</thead>
							<tbody>
								@if (Model != null && Model.Any())
								{
									foreach (var contact in Model)
									{
										<tr>
											<td class="cell">@contact.ContactId</td>
											<td class="cell">@contact.FullName</td>
											<td class="cell">@contact.Email</td>
											<td class="cell">@contact.Subject</td>
											<td class="cell">@contact.Note</td>
											<td class="cell">
												<a asp-area="Admin" asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.ContactId" class="btn btn-primary">
													<i class="bi bi-pencil-square" style="font-size: 1.2rem"></i> Sửa
												</a>
												<a asp-area="Admin" asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.ContactId" class="btn btn-danger">
													<i class="bi bi-trash" style="font-size: 1.2rem"></i> Xóa
												</a>
											</td>
										</tr>
									}
								}
								else
								{
									<tr>
										<td colspan="6" class="text-center">Không có dữ liệu để hiển thị.</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
