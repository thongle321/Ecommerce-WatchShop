<!-- ...:::: Start Blog List Section:::... -->
<div class="blog-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Start Search Form -->
                <form method="get" action="@Url.Action("Index", "Blog")" class="mb-4">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm bài viết..." value="@ViewData["CurrentFilter"]">
                        <div class="input-group-append">
                            <button class="btn btn-golden" type="submit">Tìm kiếm</button>
                        </div>
                    </div>
                </form>
                <!-- End Search Form -->
                <div class="blog-wrapper">
                    <div class="row mb-n6">
                        @foreach (var blog in Model)
                        {
                            <div class="col-xl-4 col-md-6 col-12 mb-6">
                                <div class="blog-list blog-grid-single-item blog-color--golden" data-aos="fade-up" data-aos-delay="0">
                                    <div class="image-box">
                                        <a href="blog-single-sidebar-left.html" class="image-link">
                                            <img class="img-fluid" src="@Url.Content("~/images/blog/" + blog.Image)" alt="@blog.Subject">
                                        </a>
                                    </div>
                                    <div class="content">
                                        <ul class="post-meta">
                                            <li>Đăng bởi : <a href="#" class="author">Admin</a></li>
                                            @* <li>Ngày : <a href="#" class="date">@DateTime.Now</a></li> *@
                                        </ul>
                                        <h6 class="title">
                                            <a href="blog-single-sidebar-left.html">@blog.Subject</a>
                                        </h6>
                                        <p>
                                            @blog.Contents
                                        </p>
                                        <a href="#" class="read-more-btn icon-space-left">
                                            Xem thêm <span class="icon">
                                                <i class="ion-ios-arrow-thin-right"></i>
                                            </span>
                                        </a>
                                    </div>
                                </div>
                            </div> 
                        }
                        <!-- End Product Default Single Item -->
                    </div>
                </div>
                <!-- Start Pagination -->
                <div class="page-pagination text-center" data-aos="fade-up" data-aos-delay="0">
                    <ul>
                        @if (Model.HasPreviousPage)
                        {
                            <li><a href="@Url.Action("Index", new { pageNumber = Model.PageIndex - 1 })">Trước</a></li>
                        }
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                        <li><a class="@(i == Model.PageIndex ? "active" : "")" href="@Url.Action("Index", new { pageNumber = i })">@i</a></li>
                        }
                        @if (Model.HasNextPage)
                        {
                            <li><a href="@Url.Action("Index", new { pageNumber = Model.PageIndex + 1 })">Tiếp</a></li>
                        }
                    </ul>
                </div> <!-- End Pagination -->
            </div>
        </div>
    </div>
</div> <!-- ...:::: End Blog List Section:::... -->