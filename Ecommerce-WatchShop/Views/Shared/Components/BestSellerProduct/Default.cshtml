@using System.Globalization
@model IEnumerable<Ecommerce_WatchShop.Models.Product>
<div class="product-wrapper" data-aos="fade-up" data-aos-delay="0">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="product-slider-default-1row default-slider-nav-arrow">
                    <!-- Slider main container -->
                    <div class="swiper-container product-default-slider-4grid-1row">
                        <!-- Additional required wrapper -->
                        <div class="swiper-wrapper">
                            <!-- End Product Default Single Item -->
                            <!-- Start Product Default Single Item -->
                            @foreach (var item in Model)
                            {
                                <div class="product-default-single-item product-color--pink swiper-slide">

                                    <div class="image-box">
                                        <a asp-controller="Product" asp-action="ProductDetail" class="image-link">
                                            <img src="~/images/@item.Image" alt=""
                                                 style="width: 320px; height: 320px; object-fit: contain">
                                        </a>
                                        <div class="action-link">
                                            <div class="action-link-left">
                                                <a href="#" data-bs-toggle="modal"
                                                   data-bs-target="#modalAddcart">Add to Cart</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="content">
                                        <div class="content-left">
                                            <h6 class="title">
                                                <a asp-controller="Product" asp-action="ProductDetail">
                                                    @item.ProductName
                                                </a>
                                            </h6>
                                            <ul class="review-star">
                                                <li class="fill"><i class="ion-android-star"></i></li>
                                                <li class="fill"><i class="ion-android-star"></i></li>
                                                <li class="fill"><i class="ion-android-star"></i></li>
                                                <li class="fill"><i class="ion-android-star"></i></li>
                                                <li class="empty"><i class="ion-android-star"></i></li>
                                            </ul>
                                        </div>
                                        <div class="content-right">
                                            <span class="price text-nowrap">@String.Format(new CultureInfo("vi-VN"), "{0:C}", @item.Price)</span>
                                        </div>

                                    </div>
                                </div>
                            }
                            <!-- If we need navigation buttons -->
                            <div class="swiper-button-prev"></div>
                            <div class="swiper-button-next"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>