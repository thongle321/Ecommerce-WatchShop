@model Ecommerce_WatchShop.Models.ViewModels.LoginVM
<div class="account_form modal fade" tabindex="-1" role="dialog" id="loginModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header justify-content-center">
                <h3 class="modal-title text-center w-100">Đăng nhập</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Login" method="POST">
                    <div class="default-form-box">
                        <label asp-for="Username">Tên đăng nhập <span>*</span></label>
                        <input asp-for="Username" type="text" required>
                        <span asp-validation-for="Username" class="text-danger"></span>

                    </div>
                    <div class="default-form-box">
                        <label asp-for="Password">Mật khẩu <span>*</span></label>
                        <input asp-for="Password" type="password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="login_submit d-flex justify-content-between align-items-center">
                        <div>
                            <label class="checkbox-default mb-4" for="offer">
                                <input type="checkbox" id="offer">
                                <span>Ghi nhớ tài khoản</span>
                            </label>
                        </div>
                        <a href="#" class="lost-password">Quên mật khẩu?</a>
                    </div>
                    @if (TempData["LoginError"] != null)
                    {
                        <div class="alert alert-danger">@TempData["LoginError"]</div>
                    }

                    <button class="btn btn-block btn-black-default-hover mb-4" type="submit">Đăng nhập</button>
                    <div class="d-flex justify-content-center">
                        <a href="#" class="" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#registerModal"><strong>Chưa có tài khoản? Đăng ký</strong></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>