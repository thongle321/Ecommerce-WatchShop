    ViewData["Title"] = "Chi tiết sản phẩm";
}
@section scripts
{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>

        $(document).on('click', '.add-to-wishlist', function (e) {
            e.preventDefault();

            var productId = $(this).data('id'); // Lấy ID sản phẩm

            $.ajax({
                url: '/Account/AddToWishlist', // Đường dẫn tới action
                type: 'POST',
                data: { productId: productId },
                success: function (response) {
                    if (response.success) {
                        alert(response.message); // Thông báo thành công

                        // Cập nhật trạng thái yêu thích (thay đổi màu sắc icon)
                        var icon = $(this).find('i'); // Lấy icon bên trong button

                        if (response.isFavorite) {
                            icon.removeClass('fa-heart-o').addClass('fa-heart').css('color', 'red');
                        } else {
                            icon.removeClass('fa-heart').addClass('fa-heart-o').css('color', 'gray');
                        }
                    } else {
                        alert(response.message); // Thông báo lỗi
                    }
                },
                error: function () {
                    alert('Đã xảy ra lỗi khi thêm vào danh sách yêu thích.');
                }
            });
        });

                $(document).ready(function () {
            // Bắt sự kiện click cho nút "Thêm vào giỏ"
            $('#addToCartButton').click(function (e) {
                e.preventDefault();  // Ngăn chặn hành động mặc định của thẻ <a>

                var productId = $(this).data('product-id'); // Lấy productId từ thuộc tính data
                var quantity = $('#Quantity').val(); // Lấy giá trị số lượng từ input

                // Kiểm tra giá trị quantity hợp lệ
                if (quantity <= 0 || isNaN(quantity)) {
                    $('#message').html('<div class="alert alert-danger">Số lượng không hợp lệ.</div>');
                    return;
                }

                // Thực hiện Ajax để thêm sản phẩm vào giỏ hàng
                $.ajax({
                    url: '/Cart/AddToCart', // Đường dẫn đến controller action
                    type: 'POST', // Phương thức gửi dữ liệu
                    contentType: 'application/json', // Loại dữ liệu gửi đi là JSON
                    data: JSON.stringify({ productId: productId, quantity: parseInt(quantity) }), // Dữ liệu gửi đi
                    success: function (response) {
                       alert(response.message);
                    },
                    error: function (xhr) {
                        // Hiển thị thông báo lỗi nếu có
                        var errorMessage = xhr.responseJSON?.message || "Có lỗi xảy ra!";
                        alert(errorMessage);
                    }
                });
            });
        });

    </script>
}
