<div class="checkout-section">
    <div class="container">
        <div class="checkout_form">
            <div class="row">
                <!-- User Details -->
                <div class="col-lg-6 col-md-6">
                    <form method="post" asp-action="Checkout">
                        <h3>CHI TIẾT ĐƠN HÀNG</h3>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label>Họ Tên <span>*</span></label>
                                <input asp-for="FullName" class="form-control" required>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label>Số điện thoại</label>
                                <input asp-for="Phone" class="form-control" required>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label>Email</label>
                                <input asp-for="Email" class="form-control" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label>Địa chỉ<span>*</span></label>
                                <input asp-for="Address" class="form-control" required>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label asp-for="Province">Tỉnh <span>*</span></label>
                                <select asp-for="Province" class="country_option nice-select wide" name="country" id="country">
                                    <option value="2">Hồ Chí Minh</option>
                                </select>
                                <span asp-validation-for="Province" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label asp-for="District">Huyện <span>*</span></label>
                                <select asp-for="District" class="country_option nice-select wide" name="country" id="country">
                                    <option value="2">Hồ Chí Minh</option>
                                </select>
                                <span asp-validation-for="District" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label asp-for="Ward">Xã <span>*</span></label>
                                <select asp-for="Ward" class="country_option nice-select wide" name="country" id="country">
                                    <option value="2">Hồ Chí Minh</option>
                                </select>
                                <span asp-validation-for="Ward" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <h3>Phương thức thanh toán</h3>
                            <div class="panel-default">
                                <label class="checkbox-default" for="currencyCod" data-bs-toggle="collapse"
                                       data-bs-target="#methodCod">
                                    <input type="radio" name="PaymentMethod" required>
                                    <span>Thanh toán khi nhận hàng (COD)</span>
                                </label>
                            </div>
                            <div class="panel-default">
                                <label class="checkbox-default" for="currencyPaypal" data-bs-toggle="collapse"
                                       data-bs-target="#methodPaypal" required>
                                    <input type="radio" name="PaymentMethod">
                                    <span>Ví Momo</span>
                                </label>
                            </div>
                            <div class="order_button pt-3">
                                <button class="btn btn-md btn-black-default-hover" type="submit">
                                    Thanh toán
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- Cart Summary -->
                <div class="col-lg-6 col-md-6">
                    <h3>ĐƠN HÀNG CỦA BẠN</h3>
                    <div class="order_table table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Tổng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CartItems)
                                {
                                    <tr>
                                        <td>@item.Product.ProductName <strong>× @item.Quantity</strong></td>
                                        <td>@string.Format("{0:C}", item.Quantity * item.Product.Price)</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Tổng giỏ hàng</th>
                                    <td>@string.Format("{0:C}", Model.TotalAmount)</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


