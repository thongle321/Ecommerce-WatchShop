@{
    ViewData["Title"] = "Thanh toán";
}
@model IEnumerable<Ecommerce_WatchShop.Models.ViewModels.CartRequest>

<!-- ...:::: Start Breadcrumb Section:::... -->
<div class="breadcrumb-section breadcrumb-bg-color--golden">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h3 class="breadcrumb-title">Thanh Toán</h3>
                    <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--golden">
                        <nav aria-label="breadcrumb">
                            <ul>
                                <li><a asp-controller="Home" asp-action="Index">Trang Chủ</a></li>
                                <li><a asp-controller="Cart" asp-action="Cart">Giỏ Hàng</a></li>
                                <li class="active" aria-current="page">Thanh Toán</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- ...:::: End Breadcrumb Section:::... -->
<div class="checkout-section">
    <div class="container">
        <div class="checkout_form">
            <div class="row">
                <!-- User Details -->
                <div class="col-lg-6 col-md-6">
                    <form method="post" asp-action="Checkout">
                        <h3>CHI TIẾT ĐƠN HÀNG</h3>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label>Họ Tên <span>*</span></label>
                                <input name="FullName" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label>Số điện thoại</label>
                                <input name="Phone" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label>Email</label>
                                <input name="Email" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label>Địa chỉ<span>*</span></label>
                                <input name="Address" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label>Tỉnh<span>*</span></label>
                                <input name="Province" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label>Huyện<span>*</span></label>
                                <input name="District" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="default-form-box">
                                <label name="Ward">Xã <span>*</span></label>
                                <input name="Ward" class="form-control" required>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12" style="margin-top: 30px">
                                <h3>Phương thức thanh toán</h3>
                                <div class="panel-default">
                                    <label class="checkbox-default" for="currencyCod" data-bs-toggle="collapse"
                                           data-bs-target="#methodCod">
                                        <input type="radio" name="PaymentMethod" value="COD" required>
                                        <span>Thanh toán khi nhận hàng (COD)</span>
                                    </label>
                                </div>
                                <div class="panel-default">
                                    <label class="checkbox-default" for="currencyPaypal" data-bs-toggle="collapse"
                                           data-bs-target="#methodPaypal" required>
                                        <input type="radio" name="PaymentMethod" value="Momo">
                                        <span>Ví Momo</span>
                                    </label>
                                </div>
                                <input type="hidden" name="TotalAmount" value="@Model.Sum(item => item.Quantity * item.Price)" />

                                <div class="order_button pt-3">
                                    <button class="btn btn-md btn-black-default-hover" type="submit">
                                        Thanh toán
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- Cart Summary -->
                <div class="col-lg-6 col-md-6">
                    <h3>ĐƠN HÀNG CỦA BẠN</h3>
                    <div class="order_table table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th>Tổng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if(Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ProductName <strong>× @item.Quantity</strong></td>
                                            <td>@string.Format("{0:C}", item.Quantity * item.Price)</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2">Không có sản phẩm trong giỏ hàng.</td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                @if (Model != null && Model.Any())
                                {
                                    var total = Model.Sum(item => item.Quantity * item.Price);
                                    <tr>
                                        <th>Tổng giỏ hàng</th>
                                        <td>@string.Format("{0:C}", total)</td>
                                    </tr>
                                }
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>